<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="text-dark text-center my-4">URL SHORTENER</h1>
      <div class="row">
        <div class="col-7">
          <form
            action="/shorturls"
            method="POST"
            class="form-inline my-5 d-flex"
          >
            <input
              type="url"
              placeholder="Enter url"
              class="form-control cols-lg-6"
              name="fullurl"
            />
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </div>
      </div>
      <table class="table table-dark">
        <thead>
          <tr>
            <th>Full url</th>
            <th>short url</th>
            <th>clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.fullurl %>"><%= shortUrl.fullurl %></a>
            </td>
            <td>
              <a href="<%= shortUrl.shorturl %>"><%= shortUrl.shorturl %></a>
            </td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
